<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- UIN Input Section with QR Scanner -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- UIN Input Field -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical">


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/qr_scanner_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Scan Order QR Code"
                    android:textSize="18sp"
                    android:minWidth="48dp"
                    android:contentDescription="Scan QR Code"
                    android:backgroundTint="@android:color/holo_green_dark"
                    style="@style/Widget.Material3.Button"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UIN: "
                    android:textSize="16sp"
                    android:layout_marginEnd="8dp" />

                <EditText
                    android:id="@+id/uin_input"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:maxLength="12"
                    android:text="3610817026"
                    android:hint="Enter UIN or scan QR code"
                    android:background="@android:drawable/edit_text"
                    android:padding="8dp" />

            </LinearLayout>

            <!-- QR Scanner Section (Initially Hidden) -->
            <LinearLayout
                android:id="@+id/qr_scanner_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Position the QR code within the frame"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginBottom="8dp"
                    android:textColor="@android:color/darker_gray" />

                <!-- QR Scanner Camera Preview -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:background="@android:color/black">

                    <!-- This will be replaced with actual camera preview in code -->
                    <com.journeyapps.barcodescanner.BarcodeView
                        android:id="@+id/barcode_scanner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <!-- Scanning overlay -->
                    <View
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:background="@drawable/qr_scanner_overlay" />

                </FrameLayout>

                <!-- Scanner Controls -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:gravity="center">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/toggle_flash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:text="💡 Flash"
                        style="@style/Widget.Material3.Button.OutlinedButton" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/close_scanner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="❌ Close"
                        style="@style/Widget.Material3.Button.TextButton" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

